@using CariMobil.Models
@model Cariler
@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pages">
    <div data-page="blogsingle" class="page no-toolbar no-navbar">
        <div class="page-content">

            <div class="navbarpages navbarpagesbg">
                <div class="navbar_left">
                    <div class="logo_text"> <a onclick="window.history.back()" href="#"> <i class="fa fa-arrow-left"></i></a>  <a href="/home/index/">CariMobil</a></div>
                </div>
                <div class="navbar_right navbar_right_menu">
                    <a href="#" data-panel="left" class="open-panel"><img src="~/content/images/icons/white/menu.png" alt="" title="" /></a>
                </div>
                <div class="navbar_right">
                    <a href="#" data-panel="right" class="open-panel"><img src="~/content/images/icons/white/user.png" alt="" title="" /></a>
                </div>
                <div class="navbar_right">
                    <a href="cart.html" data-view=".view-main"><img src="~/content/images/icons/white/cart.png" alt="" title="" /><span>3</span></a>
                </div>
            </div>

            <div id="pages_maincontent">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="blog_title"> Cari Bilgilerini Düzenle </h2>

                            <!-- Slider -->

                            <div class="page_single layout_fullwidth_padding">

                                <div class="col-md-12">
                                    <form action="/cari/duzenle/" method="post">
                                        <div class="form-row">
                                            <input type="hidden" name="cariId" value="@Model.CariId">

                                            <div class="form-group col-md-6">
                                                <label for="ad">Ad Soyad</label>
                                                <input type="text" name="ad" class="form-control" id="ad" placeholder="@Model.ad" value="@Model.ad">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">E-mail</label>
                                                <input type="email" name="email" class="form-control" id="inputEmail4" placeholder="@Model.email" value="@Model.email">
                                            </div>

                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <label for="Tel1">Tel 1</label>
                                                <input type="text" name="tel" class="form-control" id="Tel1" placeholder="@Model.tel" value="@Model.tel">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="Tel2">Tel 2</label>
                                                <input type="text" name="tel2" class="form-control" id="Tel2" placeholder="@Model.tel2" value="@Model.tel2">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="Fax">Fax</label>
                                                <input type="text" name="fax" class="form-control" id="Fax" placeholder="@Model.fax" value="@Model.fax">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-lg btn-block btn-primary"> <i class="fa fa-save"></i> &nbsp; Bilgileri Güncelle</button>
                                    </form>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
    </div>
</div>